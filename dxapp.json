{
  "name": "TSO500_v1.5.0",
  "title": "TSO500_v1.5.0",
  "summary": "v1.5.0 - TSO500",
  "tags": [
  ],
  "properties": {
    "github release": "v1.5.0"
  },
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "TSO500_ruo",
      "label": "TSO500_ruo",
      "help": "zip file containing of analysis tool",
      "class": "file",
      "patterns": ["*.zip"],
      "optional": false
    },
    {
      "name": "run_folder",
      "label": "run_folder",
      "help": "run folder to be analysed",
      "class": "file",
      "patterns": ["*.tar"],
      "optional": false
    },
    {
      "name": "samplesheet",
      "label": "samplesheet",
      "help": "The Samplesheet used for demultiplexing",
      "class": "file",
      "patterns": ["*.csv"]
    },
    {
      "name": "analysis_options",
      "label": "analysis_options",
      "help": "An optional string passed to analysis script",
      "class": "string",
      "optional": true
    }
  ],
  "outputSpec": [
    {
      "name": "analysis_folder",
      "label": "analysis_folder",
      "help": "All files within the analysis folder.",
      "class": "array:file",
      "optional": true
    },
    {
      "name": "logs",
      "label": "logs",
      "help": "stdout logs from RUO.",
      "class": "array:file",
      "optional": true
    },
  {
      "name": "fastqs",
      "label": "fastqs",
      "help": "fastqs.",
      "class": "array:file",
      "optional": true
    },
    {
      "name": "bams_for_coverage",
      "label": "bams_for_coverage",
      "help": "BAM files for coverage.",
      "class": "array:file",
      "optional": true
    },
    {
      "name": "QC_files",
      "label": "QC_files",
      "help": "Any other QC files for MultiQC.",
      "class": "array:file",
      "optional": true
    },
    {
      "name": "results_vcfs",
      "label": "results vcf files",
      "help": "results vcf files",
      "class": "array:file",
      "optional": true
    },
    {
      "name": "results_zip",
      "label": "zipped results folder",
      "help": "zipped results folder.",
      "class": "array:file",
      "optional": true
    },
    {
      "name": "metrics_tsv",
      "label": "metrics_tsv",
      "help": "metrics tsv file.",
      "class": "file",
      "optional": true
    }
  ],
  "runSpec": {
    "execDepends": [
    ],
    "distribution" : "Ubuntu",
    "release":"20.04",
    "file": "src/code.sh",
    "interpreter": "bash",
    "assetDepends": [
    ]
  },
  "access": {
    "allProjects":"UPLOAD",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "main": {
          "instanceType": "mem1_ssd1_v2_x36"
        }
      }
    }
  }
}
